<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignatura</title>
</head>
<body>
    <h1>Asignaturas</h1>

    

    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" onclick="VaciarFormulario()" data-bs-toggle="modal" data-bs-target="#ModalAsignatura">
  Agregar Asignatura
</button>

<!-- Modal -->
<div class="modal fade" id="ModalAsignatura" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       <input type="hidden" name="" id="AsignaturaID">
       <label>Nombre de la Asignatura</label>
       <input class="form-control" type="text" name="" id="NombreAsignatura">

       <label class="control-label">Carrera</label>
        @Html.DropDownList("CarreraID", null, htmlAttributes: new { @class = "form-control" })

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" onclick="GuardarAsignatura()" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>


<table  id="tabla-imprimir" class="table">
  <thead>
    <tr>
      <th >Asignatura</th>
      <th>Carrera</th>
      <th>Opciones</th>
      <th></th>
    </tr>
  </thead>
  <tbody id="tbody-asignatura">
  </tbody>
</table>



</body>

@section Scripts {
<script src ="~/js/Asignatura.js"></script>
}
</html>