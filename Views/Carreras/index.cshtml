<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carreras</title>
</head>
<body>
    <h1>Listado de carreras</h1>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" onclick="VaciarFormulario()" data-bs-toggle="modal" data-bs-target="#Modalcarreras">
  Agregar Carrera
</button>

<!-- Modal -->
<div class="modal fade" id="Modalcarreras" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <div class="form-row">

          <input type="hidden" id="CarreraID">

          <div class="form-group col-sm-6">
            <label>Nombre de la carrera</label>
             <input class="form-control" type="text" id="NombreCarrera">
          </div>

          <div class="form-group col-sm-6">
            <label>Duracion</label>
            <input class="form-control" type="text" id="Duracion">
          </div>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" onclick="GuardarCarrera()">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Nombre de la carrera</th>
      <th>Duracion</th>
      <th>Opciones</th>
    </tr>
  </thead>
  <tbody id="tbody-carrera">
  </tbody>
</table>

</body>

@section Scripts {
<script src ="~/js/Carrera.js"></script>
}
</html>